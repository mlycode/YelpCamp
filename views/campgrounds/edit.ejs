<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
         <h1 class="text-center mb-3">Edit <%= campground.name %></h1>
             <div>
                 <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                        <div class = "form-group">
                             <input class="form-control" type="text" name="site[name]" value="<%= campground.name %>">
                        </div>
                        <div class = "form-group">
                             <input class="form-control" type="text" name="site[image]" value="<%= campground.image %>">
                        </div>
                        <div class = "form-group">
                             <input class="form-control" type="text" name="site[description]" value="<%= campground.description %>">
                        </div>
                        <div class = "form-group">
                             <input class="form-control" type="number" name="site[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                        </div>
                        <div class = "form-group">
                             <button class = "btn btn-primary btn-lg btn-block">Submit!</button>
                        </div>
                 </form>
             </div>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>

</div>

<% include ../partials/footer %>